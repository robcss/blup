<form class="modal-card" data-fieldsGetter="">
    <header class="modal-card-head">
        <p class="modal-card-title">Report a problem with this fountain</p>
    </header>
    <section class="modal-card-body">
        <div class="field">
            <label class="label" for="inputTitle">Subject</label>
            <div class="control has-icons-right">
                <input class="input" type="text" id="inputTitle" placeholder="Report Subject" name="">
                <span class="icon is-small is-right">
                    <i id='inputTitleIcon' class="fas fa-exclamation-triangle is-hidden"></i>
                </span>
            </div>
            <p id="inputTitleHelp" class="help is-danger is-hidden">Field is required</p>
        </div>

        <div class="field">
            <label class="label" for="inputDescription">Title</label>
            <div class="control has-icons-right">
                <textarea data-uri="" class="textarea" id="inputDescription"
                    placeholder="Describe the problem..."></textarea>
                <span class="icon is-small is-right">
                    <i id='inputDescriptionIcon' class="fas fa-exclamation-triangle is-hidden"></i>
                </span>
            </div>
            <p id="inputDescriptionHelp" class="help is-danger is-hidden">Field is required</p>
        </div>
    </section>
    <footer class="modal-card-foot">
        <div class="field">
            <p class="control">
                <button class="button is-info" id="submitButton" disabled="true">Send report</button>
            </p>
        </div>
    </footer>
</form>