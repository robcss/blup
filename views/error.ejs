<% layout('layouts/boilerplate')%>

<div class="columns">
    <div class="column is-6 is-offset-3">
        <article class="message is-danger">
            <div class="message-header">
                <p class="title">
                    <%=err.message%>
                </p>
            </div>

            <% if(process.env.NODE_ENV !== "production"){ %>
            <div class="message-body">
                <%= err.stack %>
            </div>
            <% } %>

        </article>
    </div>
</div>